<?xml version="1.0" encoding="utf-8"?>
<widget id="io.cordova.sensorsuhu" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Serial">
        <param name="android-package" value="fr.drangies.cordova.serial.Serial" />
    </feature>
    <feature name="CDVOrientation">
        <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <name>Portable Thermometer</name>
    <description> Simple DIY Sensor SUHU with your smartphone </description>
    <author email="sekolahrobot@gmail.com" href="http://sekolahrobot.com"> Dhadhang | SRI </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="www/res/android/ldpi.png" />
    <icon density="mdpi" src="www/res/android/mdpi.png" />
    <icon density="hdpi" src="www/res/android/hdpi.png" />
    <icon density="xhdpi" src="www/res/android/xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>